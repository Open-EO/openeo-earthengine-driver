{
    "id": "anomaly",
    "summary": "Computes climatology anomalies",
    "description": "...",
    "categories": [
        "cube",
        "math"
    ],
    "parameters": [
        {
            "name": "data",
            "description": "A data cube. The datacube must span at least the temporal interval specified in the parameter `climatology_period`.",
            "schema": {
                "type": "object",
                "subtype": "raster-cube"
            }
        },
        {
            "name": "frequency",
            "description": "...",
            "schema": {
                "type": "string",
                "enum": [
                    "weekly",
                    "monthly",
                    "yearly"
                ]
            }
        },
        {
            "name": "climatology_period",
            "description": "...",
            "schema": {
              "type": "array",
              "subtype": "temporal-interval",
              "minItems": 2,
              "maxItems": 2,
              "items": {
                "type": "string",
                "subtype": "date",
                "format": "date"
              }
            },
            "default": [
                "1981-01-01",
                "2011-01-01"
            ],
            "optional": true
        }
    ],
    "returns": {
        "description": "A data cube. The cardinality, resolution and the number of dimensions are the same as for the original data cube.",
        "schema": {
            "type": "object",
            "subtype": "raster-cube"
        }
    },
    "links": [
        {
            "rel": "about",
            "href": "https://github.com/radiantearth/stac-spec/tree/master/extensions/eo#common-band-names",
            "title": "List of common band names as specified by the STAC specification"
        }
    ]
}